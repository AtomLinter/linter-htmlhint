{
  "name": "linter-htmlhint",
  "version": "1.6.3",
  "private": true,
  "description": "A plugin for Atom Linter providing an interface to HTMLHint.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-htmlhint.git"
  },
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "configSchema": {
    "enabledScopes": {
      "description": "List of scopes to run HTMLHint on, run `Editor: Log Cursor Scope` to determine the scopes for a file.",
      "type": "array",
      "default": [
        "text.html.angular",
        "text.html.basic",
        "text.html.gohtml",
        "text.html.jsp",
        "text.html.mustache"
      ],
      "items": {
        "type": "string"
      }
    },
    "disableWhenNoHtmlhintConfig": {
      "title": "Disable when no HTMLHint config is found",
      "type": "boolean",
      "default": true
    }
  },
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "keywords": [
    "html",
    "lint",
    "htmlhint"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtomLinter/linter-htmlhint/issues"
  },
  "homepage": "https://github.com/AtomLinter/linter-htmlhint#readme",
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.1.0",
    "htmlhint": "0.11.0",
    "strip-json-comments": "3.0.1",
    "tiny-promisify": "1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "8.3.4",
    "@commitlint/travis-cli": "9.0.0",
    "@semantic-release/apm-config": "8.0.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.20.1",
    "husky": "4.2.3",
    "jasmine-fix": "1.3.1",
    "semantic-release": "17.0.4"
  },
  "eslintConfig": {
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "extends": "airbnb-base",
    "globals": {
      "atom": true
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "package-deps": [
    "linter:2.0.0"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "release": {
    "extends": "@semantic-release/apm-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticCommits": true,
    "rangeStrategy": "pin",
    "packageRules": [
      {
        "packagePatterns": [
          "^eslint"
        ],
        "groupName": "ESLint packages"
      }
    ]
  }
}
