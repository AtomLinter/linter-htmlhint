{
  "name": "linter-htmlhint",
  "version": "1.5.1",
  "private": true,
  "description": "A plugin for Atom Linter providing an interface to HTMLHint.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-htmlhint.git"
  },
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "configSchema": {
    "enabledScopes": {
      "description": "List of scopes to run HTMLHint on, run `Editor: Log Cursor Scope` to determine the scopes for a file.",
      "type": "array",
      "default": [
        "text.html.angular",
        "text.html.basic",
        "text.html.gohtml",
        "text.html.jsp",
        "text.html.mustache"
      ],
      "items": {
        "type": "string"
      }
    },
    "disableWhenNoHtmlhintConfig": {
      "title": "Disable when no HTMLHint config is found",
      "type": "boolean",
      "default": true
    }
  },
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "test": "apm test",
    "lint": "eslint ."
  },
  "keywords": [
    "html",
    "lint",
    "htmlhint"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AtomLinter/linter-htmlhint/issues"
  },
  "homepage": "https://github.com/AtomLinter/linter-htmlhint#readme",
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.6.0",
    "htmlhint": "0.10.0",
    "strip-json-comments": "^2.0.1",
    "tiny-promisify": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/travis-cli": "^7.0.0",
    "@semantic-release/apm-config": "^5.0.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^0.14.3",
    "jasmine-fix": "^1.3.1",
    "semantic-release": "^15.9.0"
  },
  "eslintConfig": {
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "extends": "airbnb-base",
    "globals": {
      "atom": true
    },
    "env": {
      "browser": true,
      "node": true
    }
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "release": {
    "extends": "@semantic-release/apm-config"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
